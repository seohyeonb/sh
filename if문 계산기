#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS
int main(void)
{
	int opt;
	double num1, num2, result;

	printf("1. 덧셈, 2. 뺄셈, 3. 곱셈, 4. 나눗셈 \n");
	printf("선택하세요 ");
	scanf("%d", &opt);
	printf("두 개의 정수를 입력하세요: ");
	scanf("%lf %lf", &num1, &num2);

	if (opt == 1)
		result = num1 + num2;
	if (opt == 2)
		result = num1 - num2;
	if (opt == 3)
		result = num1 * num2;
	if (opt == 4)
		result = num1 / num2;

	printf("결과: %f", result);
}
