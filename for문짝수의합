#include<stdio.h>
 
int main(void)
{
    // for 반복문 예제 : 1~100 짝수의 합
    printf("1. 1~100 짝수의 합(1)\n");
    
    int sum = 0;
 
    for (int i = 1; i <= 100; ++i)
    {
        // i를 2로 나누었을때 나머지가 1이면 홀수니까 continue
        if (i % 2 == 1) continue;
 
        sum += i;
    }
    printf("짝수의 합은 : %d", sum);
 
    return 0;
}
